{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "id": {
            "type": "string",
            "description": "Unique identifier for the document"
        },
        "metadata": {
            "type": "object",
            "properties": {
                "createdDate": {
                    "type": "string",
                    "format": "date-time"
                },
                "updatedDate": {
                    "type": "string",
                    "format": "date-time"
                },
                "isActive": {
                    "type": "boolean"
                }
            },
            "required": ["createdDate", "updatedDate", "isActive"]
        },
        "brandInfo": {
            "type": "object",
            "properties": {
                "name": { "type": "string" },
                "description": { "type": "string" },
                "userId": { "type": "string" }
            },
            "required": ["name", "userId"]
        },
        "socialAccounts": {
            "type": "object",
            "properties": {
                "instagram": { "$ref": "#/definitions/socialAccount" },
                "facebook": { "$ref": "#/definitions/socialAccount" },
                "tiktok": { "$ref": "#/definitions/socialAccount" }
            }
        }
    },
    "required": ["id", "metadata", "brandInfo"],
    "definitions": {
        "socialAccount": {
            "type": "object",
            "properties": {
                "enabled": { "type": "boolean" },
                "username": { "type": "string" },
                "accessToken": { "type": "string" },
                "refreshToken": { "type": "string" },
                "expiresAt": { 
                    "type": "string",
                    "format": "date-time"
                }
            },
            "required": ["enabled", "username", "accessToken"]
        }
    }
}